# MongoDB Connection
# Use MONGO_URI for MongoDB Atlas or local MongoDB
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/binance_bot?retryWrites=true&w=majority
# Alternative: DATABASE_URL (legacy support)
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/binance_bot

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secrets (generate strong random strings)
JWT_SECRET=your-jwt-secret-here-change-this
JWT_REFRESH_SECRET=your-refresh-token-secret-here-change-this

# Binance.US API Credentials
BINANCE_API_KEY=your-binance-us-api-key
BINANCE_API_SECRET=your-binance-us-api-secret

# Docker-specific (only needed for Docker deployment)
DOCKER_ENV=true
CLIENT_DIST_PATH=/app/client/dist

# MongoDB Docker Configuration (for docker-compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeThisPassword
MONGO_DB_NAME=binance_bot
MONGO_PORT=27017

# Application Port (for docker-compose)
APP_PORT=3000

