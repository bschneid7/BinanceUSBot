# Application Configuration
NODE_ENV=production
PORT=3000
APP_PORT=3000

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD_BEFORE_DEPLOY
MONGO_DB_NAME=binance_bot
MONGO_URI=mongodb://admin:CHANGE_THIS_PASSWORD_BEFORE_DEPLOY@mongo:27017/binance_bot?authSource=admin

# JWT Secrets (IMPORTANT: Generate new secrets using: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MINIMUM_32_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_MINIMUM_32_CHARACTERS

# Binance API Configuration (REQUIRED)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_BASE_URL=https://api.binance.us
BINANCE_RECV_WINDOW=5000

# Trading Configuration
PPO_EPISODES=1000
BUY_ALLOCATION=0.05
TRAILING_STOP=0.005
DRAWDOWN_CAP=0.3
STAKING_ENABLED=true
TAX_METHOD=HIFO

# Logging
LOG_LEVEL=info

# HTTP Configuration
HTTP_TIMEOUT_MS=10000
SCAN_CONCURRENCY=6

